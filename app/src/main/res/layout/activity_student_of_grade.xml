<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.teacher.activity.StudentOfGradeActivity"
    android:backgroundTint="@color/background_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@drawable/twosidecurveheader"
                    android:padding="24dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2">
                            <ImageView
                                android:id="@+id/imgBack"
                                android:layout_width="34dp"
                                android:layout_height="34dp"
                                android:src="@drawable/arrow_back_white_48dp"></ImageView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right">
                            <ImageView
                                android:visibility="gone"
                                android:layout_width="34dp"
                                android:layout_height="34dp"
                                android:src="@drawable/filter_alt_white_24dp"></ImageView>
                            <ImageView
                                android:id="@+id/imgEdit"
                                android:layout_marginLeft="10dp"
                                android:layout_width="34dp"
                                android:layout_height="34dp"
                                android:src="@drawable/edit_white"></ImageView>
                            <ImageView
                                android:id="@+id/imgSearch"
                                android:layout_marginLeft="10dp"
                                android:layout_width="34dp"
                                android:layout_height="34dp"
                                android:src="@drawable/search_white_24dp"></ImageView>
                        </LinearLayout>



                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/lnStudentSearch"
                        android:background="@drawable/llgreystrokedesign"
                        android:backgroundTint="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <EditText
                            android:background="@null"
                            android:paddingLeft="10dp"
                            android:id="@+id/etSearch"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:singleLine="true"
                            android:textSize="@dimen/medium_text"
                            android:textColor="@color/text_color"
                            android:hint="Search Student"></EditText>
                    </LinearLayout>
                    <com.opensissas.others.customtext.Custom_Text_View
                        android:id="@+id/tvGradeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="@dimen/large_text"
                        android:textColor="@color/white"
                        android:text="Analysis Chemical Composition"></com.opensissas.others.customtext.Custom_Text_View>





                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="80dp"
                    android:padding="24dp"
                    android:orientation="vertical">
                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <androidx.recyclerview.widget.RecyclerView
                                android:nestedScrollingEnabled="false"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/rvItem"></androidx.recyclerview.widget.RecyclerView>
                            <EditText
                                android:id="@+id/etFocus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"></EditText>
                            <com.opensissas.others.customtext.Custom_Text_View_Bold
                                android:visibility="gone"
                                android:layout_marginTop="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textSize="@dimen/large_text"
                                android:gravity="center"
                                android:background="@drawable/llgreystrokedesign"
                                android:backgroundTint="@color/text_color"
                                android:textColor="@color/white"
                                android:text="Save Grades"
                                android:id="@+id/tvSaveGrade"></com.opensissas.others.customtext.Custom_Text_View_Bold>
                        </LinearLayout>
                    </androidx.core.widget.NestedScrollView>




                </LinearLayout>

            </FrameLayout>
        </LinearLayout>




    </LinearLayout>

</LinearLayout>