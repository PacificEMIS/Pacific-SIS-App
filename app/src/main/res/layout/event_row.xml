<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

   >
   <LinearLayout
       android:paddingTop="10dp"
       android:paddingLeft="20dp"
       android:paddingRight="20dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="0.12"
           android:gravity="center">
           <LinearLayout
               android:orientation="vertical"
               android:id="@+id/lnColor"
               android:layout_width="14dp"
               android:layout_height="14dp"
               android:background="@drawable/rounddesign"></LinearLayout>
       </LinearLayout>
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:orientation="horizontal">

           <com.opensissas.others.customtext.Custom_Text_View
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:textColor="@color/black"
               android:textSize="@dimen/medium_text"
               android:id="@+id/tvEventName"
               android:layout_weight="1"
               android:layout_gravity="center"></com.opensissas.others.customtext.Custom_Text_View>
           <com.opensissas.others.customtext.Custom_Text_View
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:textColor="@color/black"
               android:textSize="@dimen/medium_text"
               android:id="@+id/tvEventDate"
               android:layout_weight="0.5"></com.opensissas.others.customtext.Custom_Text_View>
           <com.opensissas.others.customtext.Custom_Text_View
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:textColor="@color/black"
               android:textSize="@dimen/medium_text"
               android:id="@+id/tvEndDate"
               android:layout_weight="0.5"></com.opensissas.others.customtext.Custom_Text_View>
       </LinearLayout>

   </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bar"></View>

</LinearLayout>