<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.teacher.activity.MissingAttendanceActivity">
    <LinearLayout
        android:background="@color/background_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@drawable/twosidecurveheader"
                    android:padding="24dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/imgBack"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:src="@drawable/arrow_back_white_48dp"></ImageView>
                        <com.opensissas.others.customtext.Custom_Text_View_Bold
                            android:id="@+id/tvCourseName"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Missing Attendance"
                            android:textColor="@color/white"
                            android:textSize="@dimen/big_text"></com.opensissas.others.customtext.Custom_Text_View_Bold>
                    </LinearLayout>





                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="110dp"
                    android:padding="20dp"
                    android:id="@+id/lnFragment"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:backgroundTint="@color/white"
                            android:background="@drawable/llwhitestrokedesign"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <LinearLayout
                                android:padding="10dp"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <com.opensissas.others.customtext.Custom_Text_View
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/medium_text"
                                    android:text="From"
                                    android:textColor="@color/bar"></com.opensissas.others.customtext.Custom_Text_View>
                                <com.opensissas.others.customtext.Custom_Text_View_Bold
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/large_text"
                                    android:id="@+id/tvFrom"
                                    android:textColor="@color/black"></com.opensissas.others.customtext.Custom_Text_View_Bold>
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:backgroundTint="@color/white"
                            android:background="@drawable/llwhitestrokedesign"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <LinearLayout
                                android:padding="10dp"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <com.opensissas.others.customtext.Custom_Text_View
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/medium_text"
                                    android:text="To"
                                    android:textColor="@color/bar"></com.opensissas.others.customtext.Custom_Text_View>
                                <com.opensissas.others.customtext.Custom_Text_View_Bold
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/large_text"
                                    android:id="@+id/tvTo"
                                    android:textColor="@color/black"></com.opensissas.others.customtext.Custom_Text_View_Bold>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/rvItem"
                        android:layout_marginTop="20dp"></androidx.recyclerview.widget.RecyclerView>



                </LinearLayout>

            </FrameLayout>
        </LinearLayout>




    </LinearLayout>
</LinearLayout>