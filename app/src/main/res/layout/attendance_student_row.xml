<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/llgreystrokedesign"
    android:backgroundTint="@color/white"
    android:layout_marginBottom="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center"
                android:src="@drawable/student"
                android:id="@+id/profileImage"
                android:layout_width="60dp"
                android:layout_height="60dp"></de.hdodenhof.circleimageview.CircleImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <com.opensis.others.customtext.Custom_Text_View_SemiBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/large_text"
                    android:textColor="@color/black"
                    android:id="@+id/tvStudentName"
                    android:text="Arthaur"></com.opensis.others.customtext.Custom_Text_View_SemiBold>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">
                    <com.opensis.others.customtext.Custom_Text_View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/medium_text"
                        android:textColor="@color/bar"
                        android:id="@+id/tvID"
                        android:text="ID : ALT-09">
                    </com.opensis.others.customtext.Custom_Text_View>
                    <com.opensis.others.customtext.Custom_Text_View
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/medium_text"
                        android:textColor="@color/bar"
                        android:id="@+id/tvAltID"
                        android:text="Alt ID : ALT-09">
                    </com.opensis.others.customtext.Custom_Text_View>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">
                    <com.opensis.others.customtext.Custom_Text_View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/medium_text"
                        android:textColor="@color/bar"
                        android:id="@+id/tvGrade"
                        >
                    </com.opensis.others.customtext.Custom_Text_View>
                    <com.opensis.others.customtext.Custom_Text_View
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/medium_text"
                        android:textColor="@color/bar"
                        android:id="@+id/tvSection"
                        android:text="Section 10"
                        android:visibility="gone">
                    </com.opensis.others.customtext.Custom_Text_View>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2">
            <LinearLayout
                android:id="@+id/lnAttendanceType"
                android:backgroundTint="@color/green"
                android:background="@drawable/llwhiterightsidecurvedesign"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">
                <com.opensis.others.customtext.Custom_Text_View_SemiBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/large_text"
                    android:textColor="@color/white"
                   android:id="@+id/tvAttenDance"></com.opensis.others.customtext.Custom_Text_View_SemiBold>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
            <LinearLayout
                android:id="@+id/lnComment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:visibility="visible"
                    android:id="@+id/imgComment"
                    android:tint="@color/grey"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/speech_bubble_48"></ImageView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>