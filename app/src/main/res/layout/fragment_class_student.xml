<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.teacher.fragment.ClassStudentFragment"
    android:orientation="vertical"
    android:background="@color/background_color">

   <androidx.recyclerview.widget.RecyclerView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/rvStudent"
       ></androidx.recyclerview.widget.RecyclerView>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/lnNoData"
       android:orientation="horizontal"
       android:gravity="center">
      <com.opensis.others.customtext.Custom_Text_View_SemiBold
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/medium_text"
          android:textColor="@color/text_color"
          android:text="No Record Found"></com.opensis.others.customtext.Custom_Text_View_SemiBold>
   </LinearLayout>


</LinearLayout>