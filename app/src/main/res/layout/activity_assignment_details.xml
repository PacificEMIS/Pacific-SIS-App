<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.teacher.activity.AssignmentDetailsActivity"
    android:orientation="vertical"
    android:background="@color/background_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@drawable/twosidecurveheader"
                    android:padding="24dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/imgBack"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:src="@drawable/arrow_back_white_48dp"></ImageView>
                        <com.opensis.others.customtext.Custom_Text_View_Bold
                            android:id="@+id/tvAssignmentName"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Homework"
                            android:textColor="@color/white"
                            android:textSize="@dimen/big_text"></com.opensis.others.customtext.Custom_Text_View_Bold>
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.opensis.others.customtext.Custom_Text_View_SemiBold
                            android:id="@+id/tvWeightPercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            android:text="Weight Percent : 40 %"></com.opensis.others.customtext.Custom_Text_View_SemiBold>
                        <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:layout_gravity="center"
                            android:background="@drawable/rounddesign"></LinearLayout>
                        <com.opensis.others.customtext.Custom_Text_View_SemiBold
                            android:id="@+id/tvTotalPercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            android:text="Percent Total : 100 %"></com.opensis.others.customtext.Custom_Text_View_SemiBold>


                    </LinearLayout>




                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/lnAssignment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="110dp"
                        android:padding="20dp"
                        android:orientation="vertical">
                        <androidx.core.widget.NestedScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <androidx.recyclerview.widget.RecyclerView
                                        android:visibility="visible"
                                        android:nestedScrollingEnabled="false"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/rvItem"></androidx.recyclerview.widget.RecyclerView>
                                    <com.opensis.others.customtext.Custom_Text_View
                                        android:visibility="gone"
                                       android:id="@+id/tvNoRecord"
                                        android:layout_gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="200dp"
                                        android:layout_marginTop="60dp"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/large_text"
                                        android:text="No Records Found"></com.opensis.others.customtext.Custom_Text_View>
                                </FrameLayout>

                                <com.opensis.others.customtext.Custom_Text_View_Bold
                                    android:id="@+id/tvCreateAssignment"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_marginTop="20dp"
                                    android:background="@drawable/llwhitestrokedesign"
                                    android:backgroundTint="@color/text_color"
                                    android:textColor="@color/white"
                                    android:gravity="center"
                                    android:text="Create Assignment"
                                    android:textSize="@dimen/big_text"></com.opensis.others.customtext.Custom_Text_View_Bold>


                            </LinearLayout>
                        </androidx.core.widget.NestedScrollView>


                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/lnCreateAssignment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/trasparent1"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:gravity="bottom">
                        <LinearLayout
                            android:padding="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/llgreystrokedesign"
                            android:backgroundTint="@color/white">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <com.opensis.others.customtext.Custom_Text_View_Bold
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/big_text"
                                    android:textColor="@color/black"
                                    android:text="Add New Assignment"></com.opensis.others.customtext.Custom_Text_View_Bold>
                                <LinearLayout
                                    android:id="@+id/lnCLose"
                                    android:gravity="end"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.2">
                                    <ImageView
                                        android:src="@drawable/close_black_48dp"
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"></ImageView>
                                </LinearLayout>
                            </LinearLayout>
                            <androidx.core.widget.NestedScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">
                                    <LinearLayout
                                        android:layout_marginTop="20dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"
                                        android:orientation="vertical">
                                        <com.google.android.material.textfield.TextInputLayout
                                            android:layout_width = "match_parent"
                                            android:background="@drawable/llgreystrokedesign"
                                            android:layout_height = "match_parent"
                                            style = "@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                                            >
                                            <EditText
                                                android:layout_width = "match_parent"
                                                android:layout_height = "match_parent"
                                                android:id = "@+id/etTitle"
                                                android:hint = "Assignment Title *"
                                                android:textSize="@dimen/large_text"
                                                android:textColor="@color/text_color"
                                                android:background="@null"
                                                android:imeOptions="actionNext"
                                                android:singleLine="true"
                                                android:backgroundTint="@color/totalpercentage"
                                                />
                                        </com.google.android.material.textfield.TextInputLayout>
                                    </LinearLayout>
                                    <LinearLayout

                                        android:layout_marginTop="20dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"
                                        android:orientation="vertical">
                                        <com.google.android.material.textfield.TextInputLayout
                                            android:layout_width = "match_parent"
                                            android:background="@drawable/llgreystrokedesign"
                                            android:layout_height = "match_parent"
                                            style = "@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
                                            <EditText

                                                android:singleLine="true"
                                                android:layout_width = "match_parent"
                                                android:layout_height = "match_parent"
                                                android:id = "@+id/etPoint"
                                                android:hint = "Points *"
                                                android:textSize="@dimen/large_text"
                                                android:textColor="@color/text_color"
                                                android:imeOptions="actionDone"
                                                android:background="@null"
                                                android:backgroundTint="@color/totalpercentage"
                                                />
                                        </com.google.android.material.textfield.TextInputLayout>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"
                                        android:backgroundTint="@color/totalpercentage"
                                        android:background="@drawable/llwhitestrokedesign"
                                        android:layout_marginTop="20dp"
                                        android:paddingLeft="20dp"
                                        android:paddingRight="20dp"
                                        android:orientation="horizontal"
                                        android:paddingTop="5dp">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical"
                                            android:layout_weight="1">
                                            <com.opensis.others.customtext.Custom_Text_View
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textSize="@dimen/medium_text"
                                                android:textColor="@color/purple_700"
                                                android:text="Assigned Date *"></com.opensis.others.customtext.Custom_Text_View>
                                            <com.opensis.others.customtext.Custom_Text_View
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/tvAssignedDate"
                                                android:textColor="@color/text_color"
                                                android:textSize="@dimen/large_text"></com.opensis.others.customtext.Custom_Text_View>
                                        </LinearLayout>
                                        <LinearLayout
                                            android:id="@+id/lnAssignedDate"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.2"
                                            android:gravity="center">
                                            <ImageView
                                                android:layout_width="30dp"
                                                android:layout_height="30dp"
                                                android:src="@drawable/calendar_grey"></ImageView>
                                        </LinearLayout>


                                    </LinearLayout>
                                    <LinearLayout

                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"
                                        android:backgroundTint="@color/totalpercentage"
                                        android:background="@drawable/llwhitestrokedesign"
                                        android:layout_marginTop="20dp"
                                        android:paddingLeft="20dp"
                                        android:paddingRight="20dp"
                                        android:orientation="horizontal"
                                        android:paddingTop="5dp">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical"
                                            android:layout_weight="1">
                                            <com.opensis.others.customtext.Custom_Text_View
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textSize="@dimen/medium_text"
                                                android:textColor="@color/purple_700"
                                                android:text="Due Date *"></com.opensis.others.customtext.Custom_Text_View>
                                            <com.opensis.others.customtext.Custom_Text_View
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/tvDueDate"
                                                android:textColor="@color/text_color"
                                                android:textSize="@dimen/large_text"></com.opensis.others.customtext.Custom_Text_View>
                                        </LinearLayout>
                                        <LinearLayout
                                            android:id="@+id/lnDueDate"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.2"
                                            android:gravity="center">
                                            <ImageView
                                                android:layout_width="30dp"
                                                android:layout_height="30dp"
                                                android:src="@drawable/calendar_grey"></ImageView>
                                        </LinearLayout>


                                    </LinearLayout>
                                    <com.opensis.others.customtext.Custom_Text_View_SemiBold
                                        android:layout_marginTop="20dp"
                                        android:background="@drawable/llwhitestrokedesign"
                                        android:backgroundTint="@color/text_color"
                                        android:gravity="center"
                                        android:textColor="@color/white"
                                        android:text="Submit"
                                        android:textSize="10sp"
                                        android:id="@+id/tvSubmit"
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"></com.opensis.others.customtext.Custom_Text_View_SemiBold>
                                    <com.opensis.others.customtext.Custom_Text_View_SemiBold
                                        android:layout_marginTop="20dp"
                                        android:background="@drawable/llwhitestrokedesign"
                                        android:backgroundTint="@color/black"
                                        android:gravity="center"
                                        android:textColor="@color/white"
                                        android:text="Cancel"
                                        android:textSize="10sp"
                                        android:id="@+id/tvCancel"
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"></com.opensis.others.customtext.Custom_Text_View_SemiBold>
                                </LinearLayout>
                            </androidx.core.widget.NestedScrollView>

                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>



            </FrameLayout>
        </LinearLayout>




    </LinearLayout>

</LinearLayout>